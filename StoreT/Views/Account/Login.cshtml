<link rel="stylesheet" href="~/css/st.css" />
<environment include="Development">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/log.js" asp-append-version="true"></script>
</environment>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div id="login-box">
        <div class="left">
            <h1>Login</h1>
            <input type="text" name="Email" placeholder="E-mail" />
            <input type="password" name="Password" placeholder="Password" />

            <input type="submit" name="signup_submit" value="Login" />
            <a asp-action="Register" asp-controller="Account">Регистрация</a>
        </div>

        <div class="right">
            <img src="~/images/3.jpg"><br>

        </div>
    </div>
</form>

